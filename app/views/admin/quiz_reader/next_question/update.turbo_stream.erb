<%= turbo_stream.update "next_questions" do %>
  <% if @next_question %>
    <%= render partial: "next_question", locals: { question: @next_question } %>
  <% end %>
  <% if @next2_question %>
    <%= render partial: "next2_question", locals: { question: @next2_question } %>
  <% end %>
<% end %>
<turbo-stream action="update-sound-id" sound-id="<%= @next_question.id % 2 %>"></turbo-stream>
