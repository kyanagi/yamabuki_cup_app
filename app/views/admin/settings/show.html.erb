<%# システム設定編集フォーム %>
<div class="container is-max-tablet">
  <section class="section">
    <h1 class="title">システム設定</h1>
    <% if flash.notice %>
      <div class="notification is-success is-light">
        <%= flash.notice %>
      </div>
    <% end %>
    <% if flash.alert %>
      <div class="notification is-danger is-light">
        <%= flash.alert %>
      </div>
    <% end %>
    <%= form_with url: admin_settings_path, method: :put do |f| %>
      <div class="field">
        <label class="switch is-rounded">
          <%= check_box_tag :registerable, true, Setting.registerable %>
          <span class="check"></span>
          <span class="control-label">エントリー受付</span>
        </label>
      </div>
      <div class="field">
        <label class="switch is-rounded">
          <%= check_box_tag :round3_course_preference_editable, true, Setting.round3_course_preference_editable %>
          <span class="check"></span>
          <span class="control-label">3Rコース希望の変更</span>
        </label>
      </div>
      <div class="field">
        <label class="switch is-rounded">
          <%= check_box_tag :round2_group_visible_on_mypage, true, Setting.round2_group_visible_on_mypage %>
          <span class="check"></span>
          <span class="control-label">2R組分けをマイページに表示</span>
        </label>
      </div>
      <div class="field">
        <%= label_tag :capacity, "定員", class: "label" %>
        <div class="control">
          <%= number_field_tag :capacity, Setting.capacity, min: 0, class: "input", required: true %>
        </div>
      </div>
      <div class="field">
        <%= label_tag :entry_phase, "エントリーフェーズ", class: "label" %>
        <div class="control">
          <div class="select is-fullwidth">
            <%= select_tag :entry_phase, options_for_select([
              ["受付期間外", nil],
              ["一次エントリー", "primary"],
              ["二次エントリー", "secondary"],
            ], Setting.entry_phase) %>
          </div>
        </div>
      </div>
      <div class="field">
        <div class="control has-text-right">
          <%= submit_tag "更新", class: "button is-primary" %>
        </div>
      </div>
    <% end %>
  </section>
</div>
