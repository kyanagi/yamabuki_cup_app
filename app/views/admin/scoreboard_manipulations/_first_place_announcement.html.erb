<h2 class="title is-4">1位発表</h2>
<div class="block">
  <%= button_to "初期表示",
          admin_scoreboard_manipulations_path(action_name: "first_place_init"),
          method: :post,
          class: "button is-link" %>
</div>
<table class="table">
  <% if @first_place_result %>
    <tr class="is-size-5">
      <td>
        <%= button_to "1位を表示",
              admin_scoreboard_manipulations_path(action_name: "first_place_display_player"),
              method: :post,
              class: "button is-primary is-large" %>
      </td>
      <td class="is-vcentered">
        1st
      </td>
      <td class="is-vcentered">
        <%= @first_place_result.player.player_profile.full_name %>
      </td>
      <td class="is-vcentered">
        <%= @first_place_result.player.player_profile.full_name_kana %>
      </td>
      <td class="is-vcentered has-text-right">
        <%= @first_place_result.score %>点
      </td>
    </tr>
  <% else %>
    <tr>
      <td colspan="5">1位のデータがありません</td>
    </tr>
  <% end %>
</table>
