<%# locals: (scores:, score_operation:) %>
<% scores.each do |score| %>
  <% name = score.matching.player.player_profile.scoreboard_full_name %>
  <div class="hayabo-player player--<%= score.status %> <%= "animation-flip-in-x" if score.score_changed? %>"
        id="hayabo-player-<%= score.matching_id %>"
        data-seat="<%= score.matching.seat %>">
    <div class="player__rank"><%= score.rank %></div>
    <div class="player__name"><div class="hayabo-player-name--length-<%= name.size %>"><%= name %></div></div>
    <div class="player__points"><%= score.points.to_s.gsub('-', "\u2212") %></div>
    <div class="player__misses">
      <% score.misses.times do %><span>Ã—</span><% end %>
    </div>
    <div class="hayabo-player__previous-situation <%= scoreboard_hayabo_player_previous_situation_class(score_operation, score.matching.player_id) %>"></div>
    <div class="player__previous-result <%= scoreboard_hayabo_player_previous_result_class(score_operation, score.matching.player_id) %>"></div>
  </div>
<% end %>
