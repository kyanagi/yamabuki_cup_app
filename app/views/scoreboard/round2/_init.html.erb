<div class="round2-container">
  <% 8.step(by: 5).take(14).each do |rank| %>
    <div class="round2-player
        <%= "round2-player-adv" if round2_advantage?(rank) %>
        <%= "round2-player-wait" if round2_waiting?(rank) %>
        "
        id="round2-player-<%= rank %>">
      <div class="round2-rank"><%= rank %></div>
      <div class="round2-name"></div>
    </div>
  <% end %>
</div>
<div id="question"></div>
