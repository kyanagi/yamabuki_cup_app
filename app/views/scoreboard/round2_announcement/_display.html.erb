<%# locals: (ranks:) %>
<div class="round2-announcement-scorelist">
  <% ranks.each do |rank| %>
    <div class="round2-announcement-player
        <%= "round2-announcement-player--adv" if round2_advantage?(rank) %>
        <%= "round2-announcement-player--wait" if round2_waiting?(rank) %>
        "
        id="round2-player-<%= rank %>">
      <div class="player__rank"><%= rank %></div>
      <div class="player__name"><%= YontakuPlayerResult.find_by(rank: rank).player.player_profile.scoreboard_full_name %></div>
    </div>
  <% end %>
</div>
