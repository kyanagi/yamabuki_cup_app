<%# locals: (scores:, score_operation:) %>
<% scores.each do |score| %>
  <% name = score.matching.player.player_profile.scoreboard_full_name %>
  <div class="final-player player--<%= score.status %> <%= "animation-flip-in-x" if score.score_changed? %>"
        id="final-player-<%= score.matching_id %>">
    <div class="player__rank"><%= score.rank %></div>
    <div class="player__name">
      <div class="final-player-name--length-<%= name.size %>"><%= name %></div>
    </div>
    <div class="player__points"><%= score.points.to_s.gsub('-', "\u2212") %></div>
    <div class="player__misses">
      <% score.misses.times do %><span>×</span><% end %>
    </div>
    <div class="player__previous-result <%= scoreboard_hayaoshi_player_previous_result_class(score_operation, score.matching.player_id) %>"></div>
  </div>
  <div class="final-player__stars">
    <% score.stars.times do %><span>★</span><% end %>
  </div>
<% end %>
